{
	"_guid_": "S-282",
	"_extends_": "F-044_Test_Data_Base",

	"title": "must return 409 when case is altered out of the transaction",

	"specs": [
		"an active profile in CCD",
    "contains a case Id for just updated case",
		"contains token (created in 'S-044-Prerequisite') which is no longer valid for current version of case",
    "includes a HTTP 409 'Conflict'"
	],
  "request": {
    "pathVariables": {
      "cid": "${[scenarioContext][childContexts][Standard_Full_Case_Creation_Data][testData][actualResponse][body][id]}"
    },
    "body": {
      "event_token" : "${[scenarioContext][childContexts][S-044-Prerequisite][testData][actualResponse][body][token]}"
    }
  },
	"expectedResponse": {
		"_extends_": "Common_409_Response",
		"headers": {
			"Content-Encoding": "gzip",
			"Content-Type": "application/json;charset=UTF-8"
		},
    "body" : {
      "exception" : "uk.gov.hmcts.ccd.endpoint.exceptions.CaseConcurrencyException",
      "timestamp" : "[[ANY]]",
      "message" : "The case data has been altered outside of this transaction.",
      "path" : "[[ANY]]",
      "details" : null,
      "callbackErrors" : null,
      "callbackWarnings" : null
    }
	}
}
